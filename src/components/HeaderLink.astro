---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const normalize = (value: string) => (value.endsWith('/') && value !== '/' ? value.slice(0, -1) : value);
const currentPath = normalize(pathname);
const hrefValue = typeof href === 'string' ? href : href instanceof URL ? href.toString() : '';
const hrefPath = normalize(hrefValue);
const isRootLocale = /\/(en|de)$/.test(hrefPath) || hrefPath === '/';
const isActive = currentPath === hrefPath || (!isRootLocale && currentPath.startsWith(`${hrefPath}/`));
---

<a href={href} class:list={[className, { active: isActive }]} {...props}>
	<slot />
</a>
<style>
	a {
		display: inline-block;
		text-decoration: none;
	}
	a.active {
		font-weight: 700;
		text-decoration: underline;
	}
</style>
