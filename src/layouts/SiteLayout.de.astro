---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { withLocale } from '../utils/i18n';

interface Props {
	title: string;
	description: string;
	alternateHref?: string;
}

const { title, description, alternateHref } = Astro.props as Props;
const switchHref = alternateHref ?? withLocale(Astro.url.pathname, 'en');
---

<!doctype html>
<html lang="de">
	<head>
		<BaseHead title={title} description={description} locale="de" alternateHref={switchHref} />
	</head>
	<body>
		<Header locale="de" alternateHref={switchHref} />
		<slot />
		<Footer locale="de" />
	</body>
</html>
